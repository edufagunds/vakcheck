<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="167dp"
        android:layout_height="199dp"
        app:srcCompat="@drawable/vakcheck_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txt_login_login"
        android:layout_marginTop="27dp"/>

    <TextView
        android:id="@+id/txt_login_login"
        android:layout_width="77dp"
        android:layout_height="38dp"
        android:text="LOGIN"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/txt_email_login"
        android:layout_width="69dp"
        android:layout_height="27dp"
        android:text="E-MAIL:"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txt_login_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="44dp" />

    <EditText
        android:id="@+id/id_caixa_email"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:background="#d9d9d9"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toBottomOf="@+id/txt_email_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/txt_senha_login"
        android:layout_width="66dp"
        android:layout_height="27dp"
        android:text="SENHA:"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/id_caixa_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="34dp"/>


    <EditText
        android:id="@+id/id_caixa_senha"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:background="#d9d9d9"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toBottomOf="@+id/txt_senha_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"/>

    <Button
        android:id="@+id/id_entrar"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginTop="63dp"
        android:backgroundTint="#16BF9f"
        android:text="ENTRAR"
        android:textStyle="bold"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_caixa_senha" />


    <TextView
        android:id="@+id/id_esqueci_minha_senha"
        android:layout_width="165dp"
        android:layout_height="23dp"
        android:layout_marginTop="40dp"
        android:text="Esqueci minha Senha"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_entrar" />

    <Button
        android:id="@+id/id_quero_ser_ser_cliente"
        android:layout_width="389dp"
        android:layout_height="66dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00D1FF"
        android:text="QUERO SER CLIENTE"
        android:textStyle="bold"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_esqueci_minha_senha"
        />



</androidx.constraintlayout.widget.ConstraintLayout>